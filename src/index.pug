doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="style.css")
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:100,300,400,600" rel="stylesheet" type="text/css")
    link( href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css")
    title Budgety
  body
    .top
      .budget
        .budget__title
          | Available Budget in 
          span.budget__title--month %Month%
          | :
        .budget__value + 2,345.64
        .budget__income.clearfix
          .budget__income--text Income
          .right
            .budget__income--value + 4,300.00
            .budget__income--percentage &nbsp;
        .budget__expenses.clearfix
          .budget__expenses--text Expenses
          .right.clearfix
            .budget__expenses--value -1,954.36
            .budget__expenses--percentage 45%
      .bottom
        .add
          .add__container
            select.add__type
              option(value='inc', selected='') +
              option(value='exp')
            input.add__description(type='text', placeholder='Add description')
            input.add__value(type='number', placeholder='Value')
            button.add__btn
              i.ion-ios-checkmark-outline